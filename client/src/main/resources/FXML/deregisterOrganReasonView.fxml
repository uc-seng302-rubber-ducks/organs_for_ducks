<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="467.0" prefWidth="479.0" stylesheets="@../gui.css"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="odms.controller.gui.popup.DeregisterOrganReasonController">
    <children>
        <Label fx:id="receiverName" layoutX="194.0" layoutY="14.0" text="receiverName"/>
        <Separator layoutX="7.0" layoutY="34.0" prefHeight="11.0" prefWidth="479.0"/>
        <Button fx:id="cancelButton" layoutX="30.0" layoutY="424.0" mnemonicParsing="false"
                onAction="#cancelDeregistration" text="Cancel"/>
        <Button fx:id="okButton" layoutX="400.0" layoutY="425.0" mnemonicParsing="false"
                onAction="#acceptDeregistration" text="OK"/>
        <GridPane hgap="5.0" layoutY="40.0" prefHeight="355.0" prefWidth="479.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="206.0" minWidth="10.0" prefWidth="106.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="348.0" minWidth="10.0" prefWidth="348.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-title" text="Organ Name:"/>
                <Label fx:id="organName" text="organName" GridPane.columnIndex="1"/>
                <RadioButton fx:id="diseaseCuredRadioButton" mnemonicParsing="false"
                             text="the treatment has cured the disease, no longer requiring an organ transplant"
                             wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <toggleGroup>
                        <ToggleGroup fx:id="deregisterReason"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="registrationErrorRadioButton" mnemonicParsing="false"
                             text="the initial registering of the organ was an error" toggleGroup="$deregisterReason"
                             wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <RadioButton fx:id="receiverDiedRadioButton" mnemonicParsing="false" text="the receiver has died"
                             toggleGroup="$deregisterReason" wrapText="true" GridPane.columnIndex="1"
                             GridPane.rowIndex="5"/>
                <Label styleClass="label-title" text="Reason:" GridPane.rowIndex="1"/>
                <RadioButton fx:id="transplantReceivedRadioButton" mnemonicParsing="false"
                             text="the receiver has received an organ transplant" toggleGroup="$deregisterReason"
                             wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="6">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <DatePicker fx:id="dODDatePicker" disable="true"/>
                        <Label fx:id="invalidDateErrorMessage" text="Invalid Date of Death" textFill="#e50505"
                               visible="false" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
                <Label styleClass="label-title" text="Date of Death: " GridPane.rowIndex="6"/>
                <ComboBox fx:id="diseaseNameComboBox" disable="true" prefWidth="150.0" promptText="Select Disease"
                          GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
